        <Button Content="INSTALL" HorizontalAlignment="Left" Margin="220,109,0,0" VerticalAlignment="Top" Width="60" FontWeight="Bold" FontFamily="Yu Gothic UI Semibold" Opacity="0.8" Background="#FF83F016">
        </Button>
        <Button Content="UPDATE" HorizontalAlignment="Left" Margin="220,134,0,0" VerticalAlignment="Top" Width="60" FontFamily="Yu Gothic UI Semibold" FontWeight="Bold" Opacity="0.6" Background="#FFFFA200">
        </Button>
        <Button Content="REMOVE" HorizontalAlignment="Left" Margin="220,159,0,0" VerticalAlignment="Top" Width="60" FontFamily="Yu Gothic UI Semibold" Opacity="0.6" Background="#FFFF0046" Foreground="White">
        </Button>



    </Grid>
</Window>
